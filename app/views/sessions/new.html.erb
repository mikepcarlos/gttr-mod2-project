<!-- <div id="login-modal"> -->
<div id="login-modal">
  <div class="modal-content">
    <div class="form-container">
      <div class="login-form">
        <span class="close"><%= link_to "x", '/gttr' %></span>
        <%= form_tag "/sessions" do %>
        <div class="">
          <%= label_tag :username %>
        </div>
        <div class="input-container">
          <%= text_field_tag :username %>
        </div>
        <br><br>
        <div class="">
          <%= label_tag :password %>
        </div>
        <div class="input-container">
          <%= text_field_tag :password %>
        </div>
        <br><br>
        <%= submit_tag "Log in" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
