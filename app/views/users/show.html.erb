<!-- css -->

<div class="sidenav profile">
  <h1>gttr</h1>
  <%= image_tag "models/willowsmith.jpg", class:"profile-img" %>
  <div class="user-info">
    <h3><%= @user.display_name %></h3>
    <p>(@<%= @user.username %>)</p><br>
    <p>____________________________________</p>
    <p><%= @user.bio %></p>
    <button><%= link_to "Delete Account", user_path, method: :delete %></button>
    <button><%= link_to "Edit Profile", edit_user_path(@user) %></button>
  </div>
</div>

<div class="main">
  <div class="main-nav">
    <button><%= link_to "Log Out", logout_path, method: :delete %></button>
    <button><%= link_to "Create", new_outfit_path %></button>
    <button><%= link_to "Explore", outfits_path %></button>
  </div>
  <div class="user-outfits">
    <% if @user.outfits.empty? %>
        <p style="margin:50px;">No outfits to show</p>
    <% else %>
        <% @user.outfits.each do |outfit| %>
        <div class="outfit">
          <h3><%= outfit.name %></h3>
          <span><%= link_to "x", outfit, method: :delete %></span>
          <% outfit.clothes.each do |clothe| %>
            <div class="outfit-clothe">
              <%= image_tag clothe.url %>
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
